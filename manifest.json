{
  "manifest_version": 3,
  "name": "LinkedIn Connector",
  "version": "1.0",
  "description": "Automate LinkedIn connection requests",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/mynetwork/grow/*"],
      "js": ["content.js"]
    }
  ]
}
